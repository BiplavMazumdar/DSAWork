import { useState } from "react";
import "./styles.css";

const ftdata = ["Apple","Mango","orange"]

export default function App() {
  const [data,setdata] = useState(["Apple"]);

  const adData =()=>{
    setdata((e)=>[...e,"new data"]);
  }
  return (
    <div className="App">
      <button onClick={adData}>click</button>
      <h1>{data}</h1>
      <h2>Start editing to see some magic happen!</h2>
    </div>
  );
}


